{
	"compilerOptions": {
		"outDir": "./build",
		"jsx": "react",
		"allowJs": true,
		"strict": true,
		"target": "ES2022",
		"moduleResolution": "bundler",
		"module": "esnext",
		"allowSyntheticDefaultImports": true,
		"noImplicitOverride": true
	},
	"include": [
		"./src",
	],
	"exclude": [
		"./demo",
		"./pdfjs",
		"node_modules",
		"./src/common",
		"./src/pdf",
		"./src/*.js",
		"build",
		"dist"
	]
}
